{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "resolveJsonModule": true,
      "types": ["node"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "include": ["scripts/**/*.ts", "tests/**/*.ts", "pages/**/*.ts", "utils/**/*.ts", "playwright.config.ts"]
  }