{
  "name": "qa-ai-starter",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test -g @smoke",
    "regression:ui": "node scripts/run_regression_ui.js",
    "codegen": "npx playwright codegen https://opensource-demo.orangehrmlive.com/",
    "test:visual": "playwright test -g @visual",
    "test:ui:debug": "PWDEBUG=1 playwright test",
    "watch:stories": "node --loader ts-node/esm --no-warnings scripts/watch-stories.ts || node scripts/watch-stories.ts",
    "gen:feature": "node scripts/story_to_feature.ts stories --out features",
    "gen:spec": "node scripts/feature_to_playwright.ts features --out tests/e2e --lang ts",
    "pipeline:story-to-spec": "npm run gen:feature && npm run gen:spec",
    "test:ui": "playwright test -g @ui || playwright test",
    "test:api": "playwright test tests/api",
    "perf": "node scripts/k6/load_test.js || echo 'Run via CI action'",
    "report:summary": "node scripts/summarize.ts",
    "report:kpi": "node scripts/kpi_report.js",
    "diff:ui": "node scripts/ui_diff.ts",
    "diff:api": "node scripts/api_diff.ts",
    "summarize": "node scripts/summarize.ts",
    "notify": "node scripts/send_slack.js",
    "demo": "npm run test:ui && npm run regression:ui && npm run report:kpi"
  },
  "devdependencies": {
    "@playwright/test": "^1.45.0",
    "dependencies": {
      "chokidar": "^4.0.3",
      "@playwright/test": "^1.55.0",
      "@types/node": "^24.3.0"
    },
    "devDependencies": {
      "@types/node": "^24.3.0",
      "yaml": "^2.8.1"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "dotenv": "^17.2.1"
  }
}
