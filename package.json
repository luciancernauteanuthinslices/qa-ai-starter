{
  "name": "qa-ai-starter",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:smoke": "playwright test -g @smoke",
    "codegen": "npx playwright codegen https://opensource-demo.orangehrmlive.com/",
    "test:visual": "playwright test -g @visual",
    "test:ui:debug": "PWDEBUG=1 playwright test",
    "report": "playwright show-report",
    "gen:feature": "node scripts/story_to_feature.js stories features",
    "gen:spec": "node scripts/feature_to_playwright.js features tests/e2e",
    "regression:ui": "node scripts/run_regression_ui.js",
    "diff:api": "node scripts/api_diff.js",
    "summarize": "node scripts/summarize.js",
    "notify": "node scripts/send_slack.js",
    "perf": "k6 run scripts/k6/load_test.js",
    "report:kpi": "node scripts/kpi_report.js",
    "pipeline:story-to-spec": "npm run gen:feature && npm run gen:spec",
    "demo": "npm run test:ui && npm run regression:ui && npm run report:kpi"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "k6": "^0.0.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0"
  }
}
