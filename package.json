{
  "name": "qa-ai-starter",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test -g @smoke",
    "regression:ui": "node scripts/run_regression_ui.js",
    "codegen": "npx playwright codegen https://opensource-demo.orangehrmlive.com/",
    "test:visual": "playwright test -g @visual",
    "test:ui:debug": "PWDEBUG=1 playwright test",
    "watch:stories": "tsx scripts/watch-stories.ts",
    "gen:feature": "tsx scripts/story_to_feature.ts stories --out features",
    "gen:spec": "tsx scripts/feature_to_playwright.ts features --out tests/e2e --lang ts",
    "report": "playwright show-report",
    "diff:api": "tsx scripts/api_diff.ts",
    "summarize": "tsx scripts/summarize.ts",
    "notify": "tsx scripts/send_slack.ts",
    "report:kpi": "tsx scripts/kpi_report.ts",
    "pipeline:story-to-spec": "npm run gen:feature && npm run gen:spec",
    "test:ui": "playwright test -g @ui || playwright test",
    "test:api": "playwright test tests/api",
    "perf": "node scripts/k6/load_test.js || echo 'Run via CI action'",
    "report:summary": "tsx scripts/summarize.ts",
    "diff:ui": "tsx scripts/ui_diff.ts",
    "demo": "npm run test:ui && npm run regression:ui && npm run report:kpi"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "dotenv": "^16.4.5",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  }
}